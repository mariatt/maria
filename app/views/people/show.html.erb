<h1>Person Details</h1>

<h2><%= @person.first_name %> <%= @person.last_name %></h2>

<p>DOB: <%= @person.dob %></p>

<p>Biography: <%= @person.biography %></p>

<h3>Publications for This Person</h3>

<% if @person.publications.size == 0 %>
<p>NO publications.</p>
<% else %>

<table>
<tr>
    <th>Title</th>
    <th>Year</th>
</tr>

<% @person.publications.each do |pub| %>

<tr>
    <td><%= "#{pub.title}" %></td>
    <td><%= "#{pub.year}" %></td>
</tr>
<% end %>
</table>
<% end %>
<p><%= link_to "Back", :back %></p>